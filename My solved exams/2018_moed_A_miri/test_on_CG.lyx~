\begin_layout Standard
שני קווים מקבלים נתונים על ידי 
\begin_inset Formula 
\[
\begin{array}{l}
l_{1}(t)=p+tv\\
l_{2}(t)=m+tv
\end{array}
\]

\end_inset

נסמן 
\begin_inset Formula 
\[
p_{1}=\left(p_{x},p_{y},p_{z}\right),p_{2}=\left(m_{x},m_{y},m_{z}\right),v=\left(v_{x},v_{y},v_{z}\right)
\]

\end_inset

לכן 
\begin_inset Formula 
\[
\begin{array}{l}
l_{1}(t)=p+tv=\left(p_{x}+tv_{x},p_{y}+tv_{y},p_{z}+tv_{z}\right)\\
l_{2}(t)=m+tv=\left(m_{x}+tv_{x},m_{y}+tv_{y},m_{z}+tv_{z}\right)
\end{array}
\]

\end_inset


\end_layout

