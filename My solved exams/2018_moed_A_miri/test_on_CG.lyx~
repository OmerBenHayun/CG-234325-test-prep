\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
A\left[l_{1}(t)\right] & =\left(\begin{array}{cccc}
5 & 0 & 0 & 10\\
3 & 7 & 0 & -15\\
1 & 0 & 7 & -5\\
1 & 0 & 0 & 2
\end{array}\right)\left(\begin{array}{c}
p_{x}+tv_{x}\\
p_{y}+tv_{y}\\
p_{z}+tv_{z}\\
1
\end{array}\right)\\
 & =\left(\begin{array}{cccc}
5 & 0 & 0 & 10\\
3 & 7 & 0 & -15\\
1 & 0 & 7 & -5\\
1 & 0 & 0 & 2
\end{array}\right)\left(\begin{array}{c}
p_{x}+tv_{x}\\
p_{y}+tv_{y}\\
p_{z}+tv_{z}\\
1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(p_{x}+tv_{x}\right)+10\\
3\left(p_{x}+tv_{x}\right)+7\left(p_{y}+tv_{y}\right)-15\\
\left(p_{x}+tv_{x}\right)+7\left(p_{z}+tv_{z}\right)-5\\
\left(p_{x}+tv_{x}\right)+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(p_{x}+tv_{x}+2-2\right)+10\\
3\left(p_{x}+tv_{x}+2-2\right)+7\left(p_{y}+tv_{y}\right)-15\\
\left(p_{x}+tv_{x}+2-2\right)+7\left(p_{z}+tv_{z}\right)-5\\
\left(p_{x}+tv_{x}\right)+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(p_{x}+tv_{x}+2\right)\\
3\left(p_{x}+tv_{x}+2\right)+7\left(p_{y}+tv_{y}\right)-21\\
\left(p_{x}+tv_{x}+2\right)+7\left(p_{z}+tv_{z}\right)-7\\
\left(p_{x}+tv_{x}\right)+2
\end{array}\right)\\
 & \cong\left(\begin{array}{c}
5\\
3+7\left(p_{y}+tv_{y}\right)-\frac{21}{\left(p_{x}+tv_{x}+2\right)}\\
1+7\left(p_{z}+tv_{z}\right)-\frac{7}{\left(p_{x}+tv_{x}+2\right)}\\
1
\end{array}\right)\\
\end{align*}

\end_inset


