l_{2}(t)=m+tv=\left(-1,2,0\right)+t\left(1,0,0\right)=\left(t-1,2,0\right)
\]

\end_inset


\end_layout

\begin_layout Standard
נקבל כי 
\begin_inset Formula 
\begin{align*}
\widetilde{l_{1}(t)} & =A\left[l_{1}(t)\right]\\
 & =\left(\begin{array}{cccc}
5 & 0 & 0 & 10\\
3 & 7 & 0 & -15\\
1 & 0 & 7 & -5\\
1 & 0 & 0 & 2
\end{array}\right)\left(\begin{array}{c}
t-1\\
4\\
2\\
1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(t-1\right)+10\\
3\left(t-1\right)+7\cdot4-15\\
t-1+7\cdot2-5\\
t-1+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5t-5+10\\
3t-3+7\cdot4-15\\
t+1+7\\
t+1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5t+5\\
3t+10\\
t+1+7\\
t+1
\end{array}\right)\\
 & \cong\left(\begin{array}{c}
5\\
1+\frac{7}{t+1}\\
1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\\
1\\
1
\end{array}\right)+\frac{7}{t+1}\cdot\left(\begin{array}{c}
0\\
1\\
0
\end{array}\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\widetilde{l_{2}(t)} & =A\left[l_{2}(t)\right]\\
 & =\left(\begin{array}{cccc}
5 & 0 & 0 & 10\\
3 & 7 & 0 & -15\\
1 & 0 & 7 & -5\\
1 & 0 & 0 & 2
\end{array}\right)\left(\begin{array}{c}
t-1\\
2\\
0\\
1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(t-1\right)+10\\
3\left(t-1\right)+14-15\\
t-1-5\\
t-1+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\left(t-1\right)+10\\
3\left(t-1\right)-1\\
t-1-5\\
t-1+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5t-5+10\\
3t-3-1\\
t-1-5\\
t-1+2
\end{array}\right)\\
 & =\left(\begin{array}{c}
5t+5\\
3t-4\\
t-6\\
t+1
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\\
\frac{3t-4}{t+1}\\
\frac{t-6}{t+1}
\end{array}\right)\\
 & =\left(\begin{array}{c}
5\\
0\\
0
\end{array}\right)+\left(t+1\right)\left(\begin{array}{c}
0\\
3t-4\\
t-6
\end{array}\right)
\end{align*}

\end_inset

כלומר 
\begin_inset Formula 
\[
\widetilde{l_{1}(t)}=\left(\begin{array}{c}
5\\
1\\
1
\end{array}\right)+\frac{7}{t+1}\cdot\left(\begin{array}{c}
0\\
1\\
0
\end{array}\right)
\]

\end_inset


\begin_inset Formula 
\[
\widetilde{l_{2}(t)}=\left(\begin{array}{c}
5\\
0\\
0
\end{array}\right)+\left(t+1\right)\left(\begin{array}{c}
0\\
3t-4\\
t-6
\end{array}\right)
\]

\end_inset

כלומר הווקטור 
\begin_inset Formula $v$
\end_inset

 המוטל הוא לא אותו ווקטור ולכן אין מנוס מלהכריע כי ההטלה לא משמרת קווים
 מקבילים.
\end_layout

