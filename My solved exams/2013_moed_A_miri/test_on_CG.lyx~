\begin_layout Standard
נראלי שאפשר.
\end_layout

\begin_layout Standard
עבור 
\begin_inset Formula $A$
\end_inset

 נקודת התחלה של הקו ו 
\begin_inset Formula $B$
\end_inset

 נקודת הסיום של הקו נבחר 
\begin_inset Formula 
\[
A=P_{0}=P_{1}=P_{2}
\]

\end_inset


\begin_inset Formula 
\[
B=P_{3}
\]

\end_inset

ואז
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}P_{0}+3t\left(1-t\right)^{2}P_{1}+3t^{2}\left(1-t\right)P_{2}+t^{3}P_{3}\\
 & =\left(1-t\right)^{3}A+3t\left(1-t\right)^{2}B+3t^{2}\left(1-t\right)A+t^{3}B\\
 & =\left(1-t\right)^{3}A+3t^{2}\left(1-t\right)A+3t\left(1-t\right)^{2}B+t^{3}B\\
 & =A\left[\left(1-t\right)^{3}+3t^{2}\left(1-t\right)\right]+\left[3t\left(1-t\right)^{2}+t^{3}\right]B\\
 & =A\left[\left(\left(1-t\right)^{2}+3t^{2}\right)\left(1-t\right)\right]+\left[\left(3\left(1-t\right)^{2}+t^{2}\right)t\right]B\\
 & =A\left[\left(\left(1-2t+t^{2}\right)+3t^{2}\right)\left(1-t\right)\right]+\left[\left(3\left(1-2t+t^{2}\right)+t^{2}\right)t\right]B\\
 & =A\left[\left(1-2t+4t^{2}\right)\left(1-t\right)\right]+\left[\left(\left(3-6t+3t^{2}\right)+t^{2}\right)t\right]B\\
 & =A\left[\left(1-2t+4t^{2}\right)\left(1-t\right)\right]+\left[\left(\left(3-6t+4t^{2}\right)\right)t\right]B\\
\\
\\
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}P_{0}+3t\left(1-t\right)^{2}P_{1}+3t^{2}\left(1-t\right)P_{2}+t^{3}P_{3}\\
 & =\left(1-t\right)^{3}A+3t\left(1-t\right)^{2}A+3t^{2}\left(1-t\right)A+t^{3}B\\
 & =A\left[\left(1-t\right)^{3}+3t\left(1-t\right)^{2}+3t^{2}\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(\left(1-t\right)^{2}+3t\left(1-t\right)+3t^{2}\right)\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(\left(1-2t+t^{2}\right)+3\left(t-t^{2}\right)+3t^{2}\right)\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(\left(1-2t+t^{2}\right)+3t-\cancel{3t^{2}+3t^{2}}\right)\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(1-2t+t^{2}+3t\right)\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(1+t+t^{2}\right)\left(1-t\right)\right]+t^{3}B\\
 & =A\left[\left(1+t+t^{2}\right)-\left(t+t^{2}+t^{3}\right)\right]+t^{3}B\\
 & =A\left(1-t^{3}\right)+t^{3}B
\end{align*}

\end_inset

 כלומר במקרה הזה 
\begin_inset Formula 
\[
\forall t\in\left[0,1\right]:C\left(t\right)=A\left(1-t^{3}\right)+t^{3}B
\]

\end_inset


\end_layout

