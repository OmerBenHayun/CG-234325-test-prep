\begin_layout Plain Layout
\begin_inset Formula 
\[
P_{0}=\left(-1,0\right),P_{1}=\left(-1,1\right),P_{2}=\left(1,1\right),P_{3}=\left(1,0\right)
\]

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}\left(-1,0\right)+3t\left(1-t\right)^{2}\left(-1,1\right)+3t^{2}\left(1-t\right)\left(1,1\right)+t^{3}\left(1,0\right)\\
 & =\left(-\left(1-t\right)^{3},0\right)+\left(-3t\left(1-t\right)^{2},3t\left(1-t\right)^{2}\right)+\left(3t^{2}\left(1-t\right),3t^{2}\left(1-t\right)\right)+\left(t^{3},0\right)\\
 & =\left(-\left(1-t\right)^{3},0\right)+\left(3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2},3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)+\left(t^{3},0\right)\\
 & =\left(t^{3}+3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2}-\left(1-t\right)^{3},3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)\\
 & =\left(t^{3}+3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2}-\left(1-2t+t^{2}\right)\left(1-t\right),3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)\\
 & =\left(t^{3}+3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2}-\left[\left(1-2t+t^{2}\right)-t\left(1-2t+t^{2}\right)\right],3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)\\
 & =\left(t^{3}+3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2}-\left[\left(1-2t+t^{2}\right)-t\left(1-2t+t^{2}\right)\right],3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)\\
\\
\\
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}\left(-1,0\right)+3t\left(1-t\right)^{2}\left(-1,1\right)+3t^{2}\left(1-t\right)\left(1,1\right)+t^{3}\left(1,0\right)\\
 & =\left(-\left(1-t\right)^{3},0\right)+\left(-3t\left(1-t\right)^{2},3t\left(1-t\right)^{2}\right)+\left(3t^{2}\left(1-t\right),3t^{2}\left(1-t\right)\right)+\left(t^{3},0\right)\\
 & =\left(-\left(1-t\right)^{3},0\right)+\left(3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2},3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)+\left(t^{3},0\right)\\
 & =\left(t^{3}+3t^{2}\left(1-t\right)-3t\left(1-t\right)^{2}-\left(1-t\right)^{3},3t^{2}\left(1-t\right)+3t\left(1-t\right)^{2}\right)\\
 & =\left(t^{3}+\left(3t-3\left(1-t\right)\right)t\left(1-t\right)-\left(1-t\right)^{3},\left(3t+3\left(1-t\right)\right)t\left(1-t\right)\right)\\
 & =\left(t^{3}+\left(3t-3+3t\right)t\left(1-t\right)-\left(1-t\right)^{3},\left(3t+\left(3-3t\right)\right)t\left(1-t\right)\right)\\
 & =\left(t^{3}+\left(6t-3\right)t\left(1-t\right)-\left(1-t\right)^{3},3t\left(1-t\right)\right)\\
 & =\left(t^{3}+3\left(2t-1\right)t\left(1-t\right)-\left(1-t\right)^{3},3t\left(1-t\right)\right)
\end{align*}

\end_inset


\begin_inset Formula 
\[
\left(t^{3}+3\left(2t-1\right)t\left(1-t\right)-\left(1-t\right)^{3}\right)^{2}+
\]

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}\left(-1,0\right)+3t\left(1-t\right)^{2}\left(0,1\right)+3t^{2}\left(1-t\right)\left(0,1\right)+t^{3}\left(1,0\right)\\
 & =\left(t^{3}-\left(1-t\right)^{3},3t\left(1-t\right)^{2}+3t^{2}\left(1-t\right)\right)\\
 & =\left(t^{3}-\left(\left(1-2t+t^{2}\right)\left(1-t\right)\right),3t\left(1-2t+t^{2}\right)+3\left(t^{2}-t^{3}\right)\right)\\
 & =\left(t^{3}-\left(\left(1-2t+t^{2}\right)-t\left(1-2t+t^{2}\right)\right),3t-6t^{2}+3t^{3}+3t^{2}-3t^{3}\right)\\
 & =\left(t^{3}-\left(\left(1-2t+t^{2}\right)-\left(t-2t^{2}+t^{3}\right)\right),3t-3t^{2}\right)\\
 & =\left(t^{3}-\left(\left(1-2t+t^{2}\right)-t+2t^{2}-t^{3}\right),3t-3t^{2}\right)\\
 & =\left(t^{3}-\left(1-3t+3t^{2}-t^{3}\right),3t-3t^{2}\right)\\
 & =\left(t^{3}-1+3t-3t^{2}+t^{3},3t\left(1-t\right)\right)\\
 & =\left(2t^{3}-3t^{2}+3t-1,3t-3t^{2}\right)
\end{align*}

\end_inset

