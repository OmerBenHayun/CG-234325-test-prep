\begin{align*}
T\left(\left(\tilde{R},\tilde{G},\tilde{B}\right)\right) & =\unote{\left(\frac{\ta{R_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(1,0,0\right)}{R_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{1}}{R_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,1,0\right)}{G_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{1}}{R_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,0,1\right)}{B_{2}\text{ on \ensuremath{\triangle_{2}}terms}}\right)}{=R_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{R}\\
 & \unote{\left(\frac{\ta{G_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(1,0,0\right)}{R_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{2}}{G_{1}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,1,0\right)}{G_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{2}}{G_{2}}{G_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,0,1\right)}{B_{2}\text{ on \ensuremath{\triangle_{2}}terms}}\right)}{=G_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{G}+\\
 & \unote{\left(\frac{\ta{B_{1}}{B_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(1,0,0\right)}{R_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{2}}{B_{1}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,1,0\right)}{G_{2}\text{ on \ensuremath{\triangle_{2}}terms}}+\frac{\ta{R_{2}}{G_{2}}{B_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\unote{\left(0,0,1\right)}{B_{2}\text{ on \ensuremath{\triangle_{2}}terms}}\right)}{=B_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{B}\\
 & =\left(R_{\text{out}},G_{\text{out}},B_{\text{out}}\right)
\end{align*}

\end_inset


