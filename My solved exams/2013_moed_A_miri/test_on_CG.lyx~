status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
T\left(\left(\tilde{R},\tilde{G},\tilde{B}\right)\right) & =\left(\begin{array}{c}
\unote{\left(\frac{\ta{R_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{1}}{R_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{1}}{R_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\right)}{=R_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{R},\\
\unote{\left(\frac{\ta{B_{1}}{B_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{2}}{B_{1}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{2}}{G_{2}}{B_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\right)}{=B_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{G},\\
\unote{\left(\frac{\ta{G_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{2}}{G_{1}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{2}}{G_{2}}{G_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\right)}{=G_{1}\text{ on \ensuremath{\triangle_{2}}terms}}\tilde{B},
\end{array}\right)\\
 & =\left(T_{r}\tilde{R},T_{g}\tilde{G},T_{b}\tilde{B}\right)\\
 & =\left(R_{\text{out}},G_{\text{out}},B_{\text{out}}\right)
\end{align*}

\end_inset


\end_layout

