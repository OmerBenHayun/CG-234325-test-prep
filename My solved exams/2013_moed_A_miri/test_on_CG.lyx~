\begin_layout Standard
אפשרי.ניתן להשיג זאת אם כל ה
\begin_inset Formula $\text{control points}$
\end_inset

 נמצאים בנקודה שרוצים לייצג.
\end_layout

\begin_layout Standard
תהא נקודה 
\begin_inset Formula $P\in\mathbb{R}^{2}$
\end_inset

 נבחר 
\begin_inset Formula $P\equiv P_{0}\equiv P_{1}\equiv P_{2}\equiv P_{3}$
\end_inset

 ואז:
\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}P_{0}+3t\left(1-t\right)^{2}P_{1}+3t^{2}\left(1-t\right)P_{2}+t^{3}P_{3}\\
 & =\left(1-t\right)^{3}P+3t\left(1-t\right)^{2}P+3t^{2}\left(1-t\right)P+t^{3}P\\
 & =\left(\left(1-t\right)^{3}+3t\left(1-t\right)^{2}+3t^{2}\left(1-t\right)+t^{3}\right)P\\
 & =\left(\left(\left(1-t\right)+3t\right)\left(1-t\right)^{2}+3t^{2}\left(\left(1-t\right)+t\right)\right)P\\
 & =\left(\left(1+2t\right)\left(1-t\right)^{2}+3t^{2}\left(1\right)\right)P\\
 & =\left(\left(1+2t\right)\left(1-2t+t^{2}\right)+3t^{2}\right)P\\
 & =\left(\left(1+2t\right)-2t\left(1+2t\right)+t^{2}\left(1+2t\right)+3t^{2}\right)P\\
 & =\left(\left(1+2t\right)-2t-4t^{2}+t^{2}+2t^{3}+3t^{2}\right)P\\
 & =\left(1-4t^{2}+t^{2}+2t^{3}+3t^{2}\right)P\\
 & =\left(1-4t^{2}+t^{2}+2t^{3}+3t^{2}\right)P\\
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\forall t\in\left[0,1\right]:C\left(t\right) & =\left(1-t\right)^{3}P_{0}+3t\left(1-t\right)^{2}P_{1}+3t^{2}\left(1-t\right)P_{2}+t^{3}P_{3}\\
 & =\left(1-t\right)^{3}P+3t\left(1-t\right)^{2}P+3t^{2}\left(1-t\right)P+t^{3}P\\
 & =\left(\left(1-t\right)^{3}+3t\left(1-t\right)^{2}+3t^{2}\left(1-t\right)+t^{3}\right)P\\
 & =\left(\left(1-t+3t\right)\left(1-t\right)^{2}+t^{2}\left(3\left(1-t\right)+t\right)\right)P\\
 & =\left(\left(1+2t\right)\left(1-t\right)^{2}+t^{2}\left(3-2t\right)\right)P\\
 & =\left(\left(1+2t\right)\left(1-2t+t^{2}\right)+t^{2}\left(3-2t\right)\right)P\\
 & =\left(\left(\left(1+2t\right)-2t\left(1+2t\right)+t^{2}\left(1+2t\right)\right)+t^{2}3-2t^{3}\right)P\\
 & =\left(\left(1+\xcancel{2t}\xcancel{-2t}\bcancel{-4t^{2}}+\bcancel{t^{2}}+\cancel{2t^{3}}\right)+\bcancel{t^{2}3}-\cancel{2t^{3}}\right)P\\
 & =P
\end{align*}

\end_inset

כלומר עור מקרה זה 
\begin_inset Formula 
\[
\forall t\in\left[0,1\right]:C\left(t\right)=P
\]

\end_inset


\end_layout

