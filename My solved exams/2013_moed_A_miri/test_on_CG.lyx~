\begin{align*}
R_{1} & =\frac{1}{\ta{R_{1}}{G_{2}}{B_{2}}+\ta{R_{1}}{R_{2}}{B_{2}}\ta{R_{1}}{R_{2}}{G_{2}}}\left(\ta{R_{1}}{G_{2}}{B_{2}},\ta{R_{1}}{R_{2}}{B_{2}},\ta{R_{1}}{R_{2}}{G_{2}}\right)\\
 & =\frac{1}{\ta{R_{2}}{B_{2}}{G_{2}}}\left(\ta{R_{1}}{G_{2}}{B_{2}},\ta{R_{1}}{R_{2}}{B_{2}},\ta{R_{1}}{R_{2}}{G_{2}}\right)\\
 & =\left(\frac{\ta{R_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}},\frac{\ta{R_{1}}{R_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}},\frac{\ta{R_{1}}{R_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}\right)
