\begin_layout Standard
כלומר מצאנו תחילה כי 
\begin_inset Formula 
\[
\begin{array}{c}
R_{1}=\frac{\ta{R_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{1}}{R_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{1}}{R_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\equiv T_{r}\\
B_{1}=\frac{\ta{B_{1}}{B_{2}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{2}}{B_{1}}{G_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{2}}{G_{2}}{B_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\equiv T_{b}\\
G_{1}=\frac{\ta{G_{1}}{G_{2}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}R_{2}+\frac{\ta{R_{2}}{G_{1}}{B_{2}}}{\ta{R_{2}}{B_{2}}{G_{2}}}G_{2}+\frac{\ta{R_{2}}{G_{2}}{G_{1}}}{\ta{R_{2}}{B_{2}}{G_{2}}}B_{2}\equiv T_{g}
\end{array}
\]

\end_inset

