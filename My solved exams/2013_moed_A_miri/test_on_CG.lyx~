\begin_layout Standard
\begin_inset Formula 
\[
C\left(t\right)=\sum_{i=0}^{3}P_{i}B_{i}^{3}\left(t\right)
\]

\end_inset


\begin_inset Formula 
\[
P_{0}=\left(0,2\right),P_{1}=\left(0,1\right),P_{3}=\left(1,0\right),P_{4}=\left(2,0\right)
\]

\end_inset


\end_layout

\begin_layout Standard
חשוב להבחין כי העקום עובר דרך 
\begin_inset Formula $P_{0}=\left(0,2\right)$
\end_inset

 ודרך 
\begin_inset Formula $P_{4}=\left(2,0\right)$
\end_inset

.
\end_layout

\begin_layout Standard
נחשב את העקום:
\begin_inset Formula 
\[
C\left(t\right)=\left(1-t\right)^{3}P_{0}+3t\left(1-t\right)^{2}P_{1}+3t^{2}\left(1-t\right)P_{2}+t^{3}P_{3}
\]

\end_inset


\begin_inset Formula 
\[
C\left(t\right)=\left(1-t\right)^{3}\left(0,2\right)+3t\left(1-t\right)^{2}\left(0,1\right)+3t^{2}\left(1-t\right)\left(1,0\right)+t^{3}\left(2,0\right)
\]

\end_inset


\begin_inset Formula 
\[
C\left(t\right)=\left(0,2\left(1-t\right)^{3}+3t\left(1-t\right)^{2}\right)+\left(3t^{2}\left(1-t\right)+2t^{3},0\right)
\]

\end_inset


\begin_inset Formula 
\[
C\left(t\right)=\left(3t^{2}\left(1-t\right)+2t^{3},2\left(1-t\right)^{3}+3t\left(1-t\right)^{2}\right)
\]

\end_inset


\begin_inset Formula 
\begin{align*}
C\left(0.5\right) & =\left(3\cdot\left(0.5\right)^{3}+2\cdot\left(0.5\right)^{3},2\cdot\left(0.5\right)^{3}+3\cdot\left(0.5\right)^{3}\right)\\
 & =\left(5\cdot\left(0.5\right)^{3},5\cdot\left(0.5\right)^{3}\right)
\end{align*}

\end_inset

כלומר ב
\begin_inset Formula $t=0.5$
\end_inset

 התוצאה היא 
\begin_inset Formula 
\[
C\left(0.5\right)=\left(5\cdot\left(0.5\right)^{3},5\cdot\left(0.5\right)^{3}\right)
\]

\end_inset


\end_layout

