\begin_deeper
\begin_layout Itemize
\begin_inset Formula $T_{1}$
\end_inset

 מט הזזה כלהיא ב
\begin_inset Formula $\mathbb{R}^{3}$
\end_inset

 כלומר 
\begin_inset Formula $\exists v_{1},v_{2},v_{3}\in\mathbb{R}$
\end_inset

 כך ש 
\begin_inset Formula $T_{1}=\left[\begin{array}{cccc}
1 & 0 & 0 & v_{1}\\
0 & 1 & 0 & v_{2}\\
0 & 0 & 1 & v_{3}\\
0 & 0 & 0 & 1
\end{array}\right]$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $T_{2}$
\end_inset

 מט הזזה כלהיא ב
\begin_inset Formula $\mathbb{R}^{3}$
\end_inset

 כלומר 
\begin_inset Formula $\exists u_{1},u_{2},u_{3}\in\mathbb{R}$
\end_inset

 כך ש 
\begin_inset Formula $T_{2}=\left[\begin{array}{cccc}
1 & 0 & 0 & u_{1}\\
0 & 1 & 0 & u_{2}\\
0 & 0 & 1 & u_{3}\\
0 & 0 & 0 & 1
\end{array}\right]$
\end_inset

.
\end_layout

\begin_layout Itemize
קיימים 
\begin_inset Formula $\forall i\in\left\{ 1,2,3\right\} :w_{i}=u_{i}+v_{i}\in\mathbb{R}$
\end_inset

 כך ש 
\begin_inset Formula 
\[
T_{3}=\left[\begin{array}{cccc}
1 & 0 & 0 & w_{1}\\
0 & 1 & 0 & w_{2}\\
0 & 0 & 1 & w_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
1 & 0 & 0 & u_{1}+v_{1}\\
0 & 1 & 0 & u_{2}+v_{2}\\
0 & 0 & 1 & u_{3}+v_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
1 & 0 & 0 & v_{1}\\
0 & 1 & 0 & v_{2}\\
0 & 0 & 1 & v_{3}\\
0 & 0 & 0 & 1
\end{array}\right]\left[\begin{array}{cccc}
1 & 0 & 0 & u_{1}\\
0 & 1 & 0 & u_{2}\\
0 & 0 & 1 & u_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=T_{1}T_{2}
\]

\end_inset


\begin_inset Formula 
\[
T_{3}=\left[\begin{array}{cccc}
1 & 0 & 0 & w_{1}\\
0 & 1 & 0 & w_{2}\\
0 & 0 & 1 & w_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
1 & 0 & 0 & u_{1}+v_{1}\\
0 & 1 & 0 & u_{2}+v_{2}\\
0 & 0 & 1 & u_{3}+v_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
1 & 0 & 0 & u_{1}\\
0 & 1 & 0 & u_{2}\\
0 & 0 & 1 & u_{3}\\
0 & 0 & 0 & 1
\end{array}\right]\left[\begin{array}{cccc}
1 & 0 & 0 & v_{1}\\
0 & 1 & 0 & v_{2}\\
0 & 0 & 1 & v_{3}\\
0 & 0 & 0 & 1
\end{array}\right]=T_{2}T_{1}
\]

\end_inset

כלומר 
\begin_inset Formula $T_{3}=\left[\begin{array}{cccc}
1 & 0 & 0 & w_{1}\\
0 & 1 & 0 & w_{2}\\
0 & 0 & 1 & w_{3}\\
0 & 0 & 0 & 1
\end{array}\right]$
\end_inset

 היא 
\series bold
מט' הזזה 
\series default
