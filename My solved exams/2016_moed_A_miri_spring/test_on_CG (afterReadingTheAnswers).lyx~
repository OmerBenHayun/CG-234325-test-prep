\begin_layout Standard
מסמנטריה הנקודה הבעייתית היא ב
\begin_inset Formula $t=0.5$
\end_inset


\begin_inset Formula 
\begin{align*}
\pd{}t\mathbf{C}_{0}(t & =0.5)=-3(1-0.5)^{2}P_{0}+3\left[1-4\cdot0.5+3\cdot0.25\right]P_{1}+3\left(2\cdot0.5-3\cdot0.25\right)P_{2}+3\cdot0.25\cdot P_{3}\\
 & \unote ={P_{0}=\left(0,0\right)}3\left[1-4\cdot0.5+3\cdot0.25\right]P_{1}+3\left(2\cdot0.5-3\cdot0.25\right)P_{2}+3\cdot0.25\cdot P_{3}\\
 & =-0.75\cdot P_{1}+0.75P_{2}+0.75\cdot P_{3}\\
 & =-0.75\cdot\left(1,1\right)+0.75\left(0,1\right)+0.75\cdot\left(1,0\right)\\
 & =\left(0,0\right)
\end{align*}

\end_inset

