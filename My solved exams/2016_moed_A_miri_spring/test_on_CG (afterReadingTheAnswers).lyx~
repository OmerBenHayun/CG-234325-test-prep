\begin_deeper
\begin_layout Itemize
\begin_inset Formula $R$
\end_inset

 מט' סיבוב ולכן 
\begin_inset Formula $R$
\end_inset

 מהצורה 
\begin_inset Formula 
\[
R=\left[\begin{array}{cccc}
a & b & c & 0\\
d & e & f & 0\\
g & h & i & 0\\
0 & 0 & 0 & 1
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 מט' הזזה ולכן 
\begin_inset Formula $T$
\end_inset

 מהצורה 
\begin_inset Formula 
\[
T=\left[\begin{array}{cccc}
1 & 0 & 0 & \tilde{x}\\
0 & 1 & 0 & \tilde{y}\\
0 & 0 & 1 & \tilde{z}\\
0 & 0 & 0 & 1
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
לכן 
\begin_inset Formula 
\[
RT=\left[\begin{array}{cccc}
a & b & c & 0\\
d & e & f & 0\\
g & h & i & 0\\
0 & 0 & 0 & 1
\end{array}\right]\left[\begin{array}{cccc}
1 & 0 & 0 & \tilde{x}\\
0 & 1 & 0 & \tilde{y}\\
0 & 0 & 1 & \tilde{z}\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
a & b & c & a\tilde{x}+b\tilde{y}+c\tilde{z}\\
d & e & f & d\tilde{x}+e\tilde{y}+f\tilde{z}\\
g & h & i & g\tilde{x}+h\tilde{y}+i\tilde{z}\\
0 & 0 & 0 & 1
\end{array}\right]
\]

\end_inset


\begin_inset Formula 
\[
TR=\left[\begin{array}{cccc}
1 & 0 & 0 & \tilde{x}\\
0 & 1 & 0 & \tilde{y}\\
0 & 0 & 1 & \tilde{z}\\
0 & 0 & 0 & 1
\end{array}\right]\left[\begin{array}{cccc}
a & b & c & 0\\
d & e & f & 0\\
g & h & i & 0\\
0 & 0 & 0 & 1
\end{array}\right]=\left[\begin{array}{cccc}
a & b & c & \tilde{x}\\
d & e & f & \tilde{y}\\
g & h & i & \tilde{z}\\
0 & 0 & 0 & 1
\end{array}\right]
\]

\end_inset


\end_layout

