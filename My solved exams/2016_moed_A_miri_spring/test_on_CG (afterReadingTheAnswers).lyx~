\begin_layout Itemize
המט' 
\begin_inset Formula $R_{3}=R_{1}R_{2}$
\end_inset

 מקיימת 
\begin_inset Formula 
\[
R_{3}R_{3}^{T}=\left(R_{1}R_{2}\right)\left(R_{1}R_{2}\right)^{T}=R_{1}R_{2}R_{2}^{T}R_{1}^{T}=R_{1}IR_{1}^{T}=R_{1}R_{1}^{T}=I
\]

\end_inset


\begin_inset Formula 
\[
R_{3}^{T}R_{3}=\left(R_{1}R_{2}\right)^{T}\left(R_{1}R_{2}\right)=R_{2}^{T}R_{1}^{T}R_{1}R_{2}=R_{2}^{T}IR_{2}=R_{2}^{T}R_{2}=I
\]

\end_inset

כלומר מתקיים 
\begin_inset Formula 
\[
R_{3}R_{3}^{T}=R_{3}^{T}R_{3}=I
\]

\end_inset

כלומר 
\begin_inset Formula $R_{3}=R_{1}R_{2}$
\end_inset

