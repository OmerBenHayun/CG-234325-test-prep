\begin_layout Standard
כלומר עקום קובי נתון על ידי 
\begin_inset Formula 
\[
\mathbf{C}_{0}(t)=(1-t)^{3}P_{0}+3(1-t)^{2}tP_{1}+3(1-t)t^{2}P_{2}+t^{3}P_{3}
\]

\end_inset

נגזור אותו 
\begin_inset Formula 
\begin{align*}
\pd{}t\mathbf{C}_{0}(t) & =\pd{}t\left[(1-t)^{3}P_{0}+3(1-t)^{2}tP_{1}+3(1-t)t^{2}P_{2}+t^{3}P_{3}\right]\\
 & =-3(1-t)^{2}P_{0}+3\pd{}t\left[(1-t)^{2}t\right]P_{1}+3\pd{}t\left[(1-t)t^{2}\right]P_{2}+3t^{2}P_{3}\\
 & =-3(1-t)^{2}P_{0}+3\pd{}t\left[\left(1-2t+t^{2}\right)t\right]P_{1}+3\pd{}t\left[(t^{2}-t^{3})\right]P_{2}+3t^{2}P_{3}\\
 & =-3(1-t)^{2}P_{0}+3\pd{}t\left[t-2t^{2}+t^{3}\right]P_{1}+3\pd{}t\left[(t^{2}-t^{3})\right]P_{2}+3t^{2}P_{3}\\
 & =-3(1-t)^{2}P_{0}+3\left[1-4t+3t^{2}\right]P_{1}+3\left(2t-3t^{2}\right)P_{2}+3t^{2}P_{3}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\pd{}t\mathbf{C}_{0}(t)=-3(1-t)^{2}P_{0}+3\left[1-4t+3t^{2}\right]P_{1}+3\left(2t-3t^{2}\right)P_{2}+3t^{2}P_{3}
\]

\end_inset


