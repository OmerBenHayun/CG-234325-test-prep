\begin_layout Standard
נגזור על מנת למצוא את הדרישה השניה:
\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\rd{}tP\left(t\right) & =\rd{}t\left[\left(1-t\right)^{2}P_{0}+2\left(1-t\right)tP_{1}+t^{2}P_{2}\right]\\
 & =\rd{}t\left[\left(1-t\right)^{2}P_{0}\right]+\rd{}t\left[2\left(1-t\right)tP_{1}\right]+\rd{}t\left[t^{2}P_{2}\right]\\
 & =-2\left(1-t\right)P_{0}+\rd{}t\left[2\left(1-t\right)tP_{1}\right]+2tP_{2}\\
 & =-2\left(1-t\right)P_{0}+\rd{}t\left[2\left(1-t\right)\right]tP_{1}+2\left(1-t\right)\rd{}t\left[tP_{1}\right]+2tP_{2}\\
 & =-2+2tP_{0}+2\left(-1\right)tP_{1}+2\left(1-t\right)P_{1}+2tP_{2}\\
 & =-2+2tP_{0}+2\left(-1\right)tP_{1}+2-2tP_{1}+2tP_{2}\\
 & =2tP_{0}-4tP_{1}+2tP_{2}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\rd{}tP\left(t\right) & =\rd{}t\left[\left(1-t\right)^{2}P_{0}+2\left(1-t\right)tP_{1}+t^{2}P_{2}\right]\\
 & =\rd{}t\left[\left[1-2t+t^{2}\right]P_{0}+2\left[t-t^{2}\right]P_{1}+t^{2}P_{2}\right]\\
 & =\left[0-2+2t\right]P_{0}+2\left[1-2t\right]P_{1}+2tP_{2}\\
 & =2\left(t-1\right)P_{0}+2\left(1-2t\right)P_{1}+2tP_{2}
\end{align*}

\end_inset

באופן דומה:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\rd{}tQ\left(t\right) & =\ldots\\
 & =2\left(t-1\right)Q_{0}+2\left(1-2t\right)Q_{1}+2tQ_{2}
\end{align*}

\end_inset

נדרוש 
\begin_inset Formula 
\[
\left[\rd{}tP\left(t\right)\right]_{t=1}=\left[\rd{}tQ\left(t\right)\right]_{t=0}
\]

\end_inset

 הנ
\begin_inset Quotes erd
\end_inset

ל מתקיים אמ
\begin_inset Quotes erd
\end_inset

מ:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & \left[\rd{}tP\left(t\right)\right]_{t=1}=\left[\rd{}tQ\left(t\right)\right]_{t=0}\\
\iff & \left[2\left(t-1\right)P_{0}+2\left(1-2t\right)P_{1}+2tP_{2}\right]_{t=1}=\left[2\left(t-1\right)Q_{0}+2\left(1-2t\right)Q_{1}+2tQ_{2}\right]_{t=0}\\
\iff & \left[\left(t-1\right)P_{0}+\left(1-2t\right)P_{1}+tP_{2}\right]_{t=1}=\left[\left(t-1\right)Q_{0}+\left(1-2t\right)Q_{1}+tQ_{2}\right]_{t=0}\\
\iff & -P_{1}+P_{2}=-Q_{0}+Q_{1}\\
\iff & P_{2}+Q_{0}=Q_{1}+P_{1}\\
\unote{\iff}{\begin{array}{c}
\text{we know already}\\
Q_{0}=P_{2}
\end{array}} & 2P_{2}=Q_{1}+P_{1}\\
 & \boxed{P_{2}=\frac{Q_{1}+P_{1}}{2}}
\end{align*}

\end_inset

 כלומר התנאים הם:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{array}{c|ccc}
C^{0} & Q_{0}=P_{2}\\
\hline C^{1} & Q_{0}=P_{2} & \text{and} & P_{2}=\frac{Q_{1}+P_{1}}{2}
\end{array}
\]

\end_inset


\end_layout

